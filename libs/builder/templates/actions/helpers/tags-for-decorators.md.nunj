{%- macro render(Node, declaration) -%}
{%- if declaration.getDecorators %}
{% for decorator in declaration.getDecorators() %}
{%- if decorator.getName() === 'Component' %}
<div id="ng-doc-template-tag" properties-color="blue">{{ decorator.getName() }}</div>
{%- elif decorator.getName() === 'Directive' %}
<div id="ng-doc-template-tag" properties-color="orange">{{ decorator.getName() }}</div>
{%- elif decorator.getName() === 'Injectable' %}
<div id="ng-doc-template-tag" properties-color="indigo">{{ decorator.getName() }}</div>
{%- elif decorator.getName() === 'NgModule' %}
<div id="ng-doc-template-tag" properties-color="pink">{{ decorator.getName() }}</div>
{%- elif decorator.getName() === 'Pipe' %}
<div id="ng-doc-template-tag" properties-color="lime">{{ decorator.getName() }}</div>
{%- else %}
<div id="ng-doc-template-tag" properties-color="grey">{{ decorator.getName() }}</div>
{%- endif %}
{%- endfor %}
{%- endif %}
{%- endmacro %}
